<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3/dist/tailwind.min.css" rel="stylesheet">
  <script src defer="/js/dashboard.js"></script>
</head>
<body class="bg-gray-100 text-gray-800">

  <!-- Navbar -->
  <%- include('partials/_navbar') %>

  <!-- Dashboard Main -->
  <main class="max-w-3xl mx-auto py-8">
    <h1 class="text-3xl font-bold mb-6">Welcome, <%= user.username %> ✈️</h1>

    <section class="space-y-6">
      <!-- Total Hours -->
      <div class="p-6 bg-white shadow rounded">
        <h2 class="text-xl mb-2">Total Flight Hours</h2>
        <p id="hours" class="text-4xl font-bold text-blue-700"><%= totalHours %></p>
      </div>

      <!-- Milestones Completed -->
      <div class="p-6 bg-white shadow rounded">
        <h2 class="text-xl mb-2">Milestones Completed</h2>
        <p id="milestones" class="text-4xl font-bold text-green-700"><%= totalMilestones %></p>
      </div>

      <!-- Progress Bar -->
      <div class="p-6 bg-white shadow rounded">
        <h2 class="text-xl mb-2">Progress to Next Milestone</h2>
        <div class="h-4 bg-gray-200 rounded overflow-hidden">
          <div id="progress-bar" class="h-full bg-blue-500 w-0 transition-all duration-700 ease-out"></div>
        </div>
      </div>
    </section>
  </main>

  <!-- Backend Data to Frontend -->
  <script>
    window.dashboardData = {
      hours: <%= totalHours %>,
      milestones: <%= totalMilestones %>,
      nextMilestoneThreshold: <%= nextMilestoneThreshold %>
    };
  </script>
  

</body>
</html>
