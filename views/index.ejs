<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/dashboard.js" defer></script>
</head>
<body class="">

  <!-- Navbar -->
  <%- include('partials/_navbar') %>

  <!-- Dashboard Main -->
  <main class="centered-page">
    <h1 class="">Welcome, <%= user.username %> ✈️</h1>

    <section class="">
<!-- Flight Summary Card -->
 <div id="flightCard">
    <!-- Total Hours -->
    <a href="/users/<%= user._id %>/sessions" style="text-decoration: none; color: inherit;">
    <div id="slot">
      <div class="">
        <h2 class="">Total Flight Hours</h2>
        <p id="hoursTotal" class="" data-count="<%= totalHours %>"><%= totalHours %></p>
      </div>
    </div>
    </a>
  <!-- Milestones -->
    <a href="/users/<%= user._id %>/milestones" style="text-decoration: none; color: inherit;">
    <div id="slot"> 
    <div class="">
      <h2 class="">Milestones Completed</h2>
      <p id="milestoneTotal" class="" data-count="<%= totalMilestones %>"><%= totalMilestones %></p>
    </div>
  </div>
  </a>
    <!-- Progress Section -->
  <a href="/users/<%= user._id %>/progress" style="text-decoration: none; color: inherit;">   
  <div id="slot">
    <div>
      <h2 class="">Progress to Completion</h2>
      <div class="">
        <div class="progress-bar-container">
          <div id="progressBar"
              class="progress-bar-fill"
              data-progress="<%= Math.min((totalHours / nextMilestoneThreshold) * 100, 100) %>"
              >
          </div>
        </div>
        <span id="progressLabel" class="">
          <%= Math.min((totalHours / nextMilestoneThreshold) * 100, 100) %>%
        </span>
      </div>
      </div>
  </div>
</div>

    </section>
  </main>


</body>
</html>
