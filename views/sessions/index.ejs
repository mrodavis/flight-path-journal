<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Sessions</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/_navbar') %>
    
<main class="session-form-wrapper">
    <br>
    <div class="form-card">
<h1>Flight Sessions✈️</h1>
<section>

    <div class="cta-container">
        <a href="/users/<%= user._id %>/sessions/new" class="btn cta-btn">Log Session</a>
    </div>
        <ul class="session-list">
        <% sessions.forEach(s => { %>
            <li>
            <a href="/users/<%= userId %>/sessions/<%= s._id %>" class="session-card">
                <div class="session-details">
                <p class="session-date"><%= s.date.toDateString() %></p>
                <h2 class="session-title"><%= s.location %></h2>
                </div>
                <span class="session-badge">🛫 <%= s.focusArea %></span>
            </a>
            </li>
        <% }) %>
        </ul>
        

<div class="cta-container">
  <a href="/" class="btn cta-btn">Back to Dashboard</a>
</div>
</section></div>
</main>
</body>
</html>