<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flight Sessions</title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/_navbar') %>
<main class="">
    <br>
<h1>Flight Sessions✈️</h1>
<section>
<div id="flightCard">
    <div class="cta-container">
  <a href="/users/<%= user._id %>/sessions/new" class="btn cta-btn">Log Session</a>
</div>
<ul>
<% sessions.forEach(s => { %>
    <a href="/users/<%= userId %>/sessions/<%= s._id %>">
  <div class="session-card">
    <div class="session-details">
      <p class="session-date"><%= s.date.toDateString() %></p>
      <h2 class="session-title"><%= s.location %></h2>
    </div>
    <span class="session-badge">🛫 <%= s.focusArea %></span>
  </div></a>
<% }) %>
</ul>
</div>


</section>
</main>
</body>
</html>