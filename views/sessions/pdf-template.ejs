<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Flight Session Details</title>
  <link rel="stylesheet" href="/css/style.css" />
  <title><%= session.date.toDateString() %> - Flight Log</title>
  <style>
  body {
    font-family: 'Courier New', monospace;
    background-color: #fffaf5;
    padding: 2rem;
    color: #333;
  }

  .centered-page {
    border: 2px solid #ff5a1f;
    border-radius: 12px;
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
    background-color: #fffdf9;
  }

  .page-title {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .page-title::after {
    content: " ✈️";
  }

  .session-badge-2 {
    font-style: italic;
    text-align: center;
    color: #777;
    font-size: 14px;
    margin-bottom: 1rem;
  }

  .tag-container {
    text-align: center;
    margin: 1rem 0;
  }

  .tag {
    display: inline-block;
    padding: 8px 12px;
    margin: 5px;
    font-size: 14px;
    background-color: #eee;
    border: 1px solid #ddd;
    border-radius: 20px;
    font-weight: bold;
  }

  .logbook {
    margin-top: 1rem;
  }

  .log-entry {
    display: flex;
    justify-content: space-between;
    padding: 8px 0;
    border-bottom: 1px dashed #bbb;
    font-size: 16px;
  }

  .log-label {
    font-weight: bold;
    width: 30%;
  }

  .log-value {
    width: 65%;
    text-align: right;
  }

  .log-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .btn {
    border: none;
    padding: 10px 16px;
    font-size: 14px;
    border-radius: 6px;
    cursor: pointer;
  }

  .btn-edit {
    background-color: #f2f2f2;
    color: #333;
    border: 1px solid #ccc;
  }

  .btn-delete {
    background-color: #ff5a1f;
    color: white;
  }

  .btn-download, .btn-print {
    background-color: #ff5a1f;
    color: white;
  }

  .btn-print i, .btn-download i {
    margin-right: 5px;
  }

  @media print {
    .btn, .log-actions, a {
      display: none !important;
    }

    body {
      background: white;
    }

    .centered-page {
      border: none;
      padding: 0;
    }
  }
</style>

</head>
<body>
 

  <main class="centered-page">
<% const tagIcons = {
  "Day Flight": "🌞",
  "Night Flight": "🌙",
  "Logged": "📘",
  "Solo": "🧍‍♂️",
  "Crosswind": "💨",
  "Emergency Drill": "🚨",
  "Simulator": "🖥️",
  "Pattern Work": "🔁",
  "Checkride Prep": "✅"
} %>
 <h1 class="page-title">Flight Log: <%= new Date(session.date).toDateString() %> 🛫</h1>   

<section class="logbook">


    <h1 class="page-title">Session on <%= new Date(session.date).toDateString() %> 🛫</h1>
    <p class="session-badge-2"><%= session.location%>🚡 • <%=session.aircraft%>🛩️ • <%=session.duration %> hr<%= session.duration > 1 ? 's' : '' %>🕒</p><br>
<div class="tag-container">
  <% if (session.tags && session.tags.length) { %>
    <% session.tags.forEach(tag => { %>
      <span class="tag">
        <%= tagIcons[tag] || "🏷️" %> <%= tag %>
      </span>
    <% }) %>
  <% } %>
</div>
    <div class="log-entry">
    <div class="log-label">📅 Date:</div>
    <div class="log-value"><strong><%= session.date.toDateString() %></strong></div>
  </div>
  <div class="log-entry">
    <div class="log-label">📍 Location:</div>
    <div class="log-value"><strong><%= session.location %></strong></div>
  </div>
  <div class="log-entry">
    <div class="log-label">🕒 Duration:</div>
    <div class="log-value"><strong><%= session.duration %> hr<%= session.duration > 1 ? 's' : '' %></strong></div>
  </div>
  <div class="log-entry">
    <div class="log-label">🎯 Focus:</div>
    <div class="log-value"><strong><%= session.focusArea %></strong></div>
  </div>
  <div class="log-entry">
    <div class="log-label">🧑‍✈️ Instructor:</div>
    <div class="log-value"><strong><%= session.instructor %></strong></div>
  </div>
  <div class="log-entry">
    <div class="log-label">☁️ Weather:</div>
    <div class="log-value"><strong><%= session.weather %></strong></div>
  </div>
  <div class="log-entry">
    <div class="log-label">✈️ Aircraft:</div>
    <div class="log-value"><strong><%= session.aircraft %></strong></div>
  </div>
  <div class="log-entry">
    <div class="log-label">📝 Notes:</div>
    <div class="log-value"><strong><%= session.notes || 'N/A' %></strong></div>
  </div>

</section>


  </main>
</body>
</html>
